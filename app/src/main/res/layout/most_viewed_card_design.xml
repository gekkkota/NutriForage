<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="160dp"
        android:padding="15dp">

        <ImageView
            android:id="@+id/mv_img"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/adobo_img"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/mv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chicken Adobo"
            android:layout_toRightOf="@+id/mv_img"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:fontFamily="@font/baloo"/>

        <RatingBar
            android:id="@+id/mv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_below="@id/mv_text"
            android:layout_toRightOf="@id/mv_img"
            android:layout_marginLeft="10dp"
            android:rating="4.5"/>

        <TextView
            android:id="@+id/mv_desc"
            android:layout_width="182dp"
            android:layout_height="91dp"
            android:layout_below="@id/mv_rating"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/mv_img"
            android:padding="5dp"
            android:text="@string/chicken_adobo_text"
            android:textSize="12sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>