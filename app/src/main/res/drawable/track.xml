<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_checked="true">
        <shape
            android:shape="rectangle">
            <solid
                android:color="#90A955"/>
            <corners
                android:radius="30dp"/>
            <stroke
                android:width="1dp"
                android:color="#90A955"/>
            <size
                android:height="20dp"/>
        </shape>
    </item>

    <item
        android:state_checked="false">
        <shape
            android:shape="rectangle">
            <solid
                android:color="#132A13"/>
            <corners
                android:radius="30dp"/>
            <stroke
                android:width="1dp"
                android:color="#132A13"/>
            <size
                android:height="20dp"/>
        </shape>
    </item>

</selector>