<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NutriForagePractice" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bgcolor1</item>
        <item name="colorPrimaryVariant">@color/bgcolor2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#586751</item>
        <!-- Customize your theme here. -->
    </style>
    
    <!-- SplashScreen -->
    <style name="SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splashscreen</item>
        <item name="android:statusBarColor" tools:targetApi="l">#72856A</item>
    </style>

    <style name="roundimageview" parent="">

        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
        <item name="color">@color/white</item>

    </style>

    <!-- Menu Style -->
    <style name="navigationbarTheme">

        <!-- Color of text and icon when SELECTED -->
        <item name="colorPrimary">@color/bgcolor1</item>
        <!-- Background color when SELECTED -->
        <item name="colorControlHighlight">@color/black</item>



    </style>
</resources>